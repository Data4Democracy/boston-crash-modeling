{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Predictions",
    "description": "Defines the structure of a set of predictions",
    "type": "object",
    "features": {
        "title": "Prediction",
        "description": "Defines the structure of a prediction",
        "type": "array",
        "properties": {
            "id": {
                "description": "Unique identifier of prediction",
                "type": "string"
            },
            "year": {
                "description": "Year of prediction",
                "type": "number"
            },
            "week": {
                "description": "Week of prediction",
                "type": "number"
            },
            "prediction": {
                "description": "Value of prediction",
                "type": "number"
            },
            "segment": {
                "title": "Segment",
                "description": "Segment being predicted on",
                "type": "object",
                "properties": {
                    "id": {
                        "description": "Identifier of segment being predicted on",
                        "type": "string"
                    },
                    "display_name": {
                        "description": "Display name of segment",
                        "type": "string"
                    }
                },
                "required": ["id", "display_name"]
            },
            "geometry": {
              "title": "Geometry",
              "description": "Segment geometry data in GeoJSON format",
              "type": "object"
            }
        },
        "required": ["id", "prediction", "segment", "geometry"]
    }
}
